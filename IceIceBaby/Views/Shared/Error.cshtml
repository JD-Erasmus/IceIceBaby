@model IceIceBaby.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<section class="card border-0 shadow-soft p-5 text-center">
    <h1 class="display-5 text-danger">Something went wrong.</h1>
    <p class="text-muted">An unexpected issue occurred while processing your request.</p>

    @if (Model.ShowRequestId)
    {
        <p class="fw-semibold">Request ID: <code>@Model.RequestId</code></p>
    }

    <p class="text-muted">If you are the application owner, check the logs or switch to the <strong>Development</strong> environment for detailed diagnostics.</p>
    <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">Back to safety</a>
</section>
