@model IceIceBaby.Models.Order

@{
    ViewData["Title"] = "Invoice";
}

<div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-0">Invoice - @Model.OrderNo</h1>
    <a class="btn btn-outline-secondary" href="@Url.Action("Details", new { id = Model.Id })">Back to Order</a>
</div>

<div class="mb-3">Customer: @Model.Customer?.Name</div>

<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Item</th>
            <th class="text-end">Qty</th>
            <th class="text-end">Unit</th>
            <th class="text-end">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Items)
        {
            <tr>
                <td>@i.Product?.Name</td>
                <td class="text-end">@i.Qty</td>
                <td class="text-end">@i.UnitPriceSnapshot.ToString("C")</td>
                <td class="text-end">@i.LineTotal.ToString("C")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">Subtotal</th>
            <th class="text-end">@Model.Subtotal.ToString("C")</th>
        </tr>
    </tfoot>
</table>

<p class="text-muted">PDF generation to be added via IPdfService.</p>
