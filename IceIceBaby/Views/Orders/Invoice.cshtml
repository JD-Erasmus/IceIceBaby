@model IceIceBaby.Models.Order

@{
    ViewData["Title"] = "Invoice";
}

<section class="mb-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
    <div>
        <h1 class="page-title mb-1">Invoice - @Model.OrderNo</h1>
        <p class="text-muted mb-0">Customer: @Model.Customer?.Name</p>
    </div>
    <a class="btn btn-outline-primary" asp-controller="Orders" asp-action="Details" asp-route-id="@Model.Id">Back to Order</a>
</section>

<section class="card border-0 shadow-soft p-4">
    <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
            <thead>
                <tr>
                    <th>Item</th>
                    <th class="text-end">Qty</th>
                    <th class="text-end">Unit</th>
                    <th class="text-end">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Items)
                {
                    <tr>
                        <td>@i.Product?.Name</td>
                        <td class="text-end">@i.Qty</td>
                        <td class="text-end">@i.UnitPriceSnapshot.ToString("C")</td>
                        <td class="text-end">@i.LineTotal.ToString("C")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-end">Subtotal</th>
                    <th class="text-end">@Model.Subtotal.ToString("C")</th>
                </tr>
            </tfoot>
        </table>
    </div>

    <p class="text-muted mt-4 mb-0">PDF generation will be powered by the IPdfService integration.</p>
</section>
