@model IceIceBaby.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<section class="mb-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
    <div>
        <h1 class="page-title mb-1">Order @Model.OrderNo</h1>
        <p class="text-muted mb-0">Customer: @Model.Customer?.Name &bull; Status: @Model.Status &bull; Subtotal: @Model.Subtotal.ToString("C")</p>
    </div>
    <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-outline-primary" asp-controller="Orders" asp-action="Index">Back to Orders</a>
        <a class="btn btn-primary" href="@Url.Action("Invoice", new { id = Model.Id })">View Invoice</a>
    </div>
</section>

<section class="card border-0 shadow-soft p-4">
    <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
            <thead>
                <tr>
                    <th>Product</th>
                    <th class="text-end">Qty</th>
                    <th class="text-end">Unit</th>
                    <th class="text-end">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Items)
                {
                    <tr>
                        <td>@i.Product?.Name (@i.ProductId)</td>
                        <td class="text-end">@i.Qty</td>
                        <td class="text-end">@i.UnitPriceSnapshot.ToString("C")</td>
                        <td class="text-end">@i.LineTotal.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex flex-wrap gap-2 mt-4">
        @if (Model.Status == IceIceBaby.Models.OrderStatus.New || Model.Status == IceIceBaby.Models.OrderStatus.Confirmed)
        {
            <form asp-action="Confirm" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button class="btn btn-success" type="submit">Confirm</button>
            </form>
        }
        @if (Model.Status != IceIceBaby.Models.OrderStatus.Delivered)
        {
            <form asp-action="Cancel" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button class="btn btn-outline-danger" type="submit">Cancel</button>
            </form>
        }
    </div>
</section>
