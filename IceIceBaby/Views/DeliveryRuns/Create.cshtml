@model IceIceBaby.Models.DTOs.CreateRunDto
@{
    ViewData["Title"] = "Create Run";
    var drivers = ViewBag.Drivers as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    var vehicles = ViewBag.Vehicles as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    var openOrders = ViewBag.OpenOrders as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
}
<h1>Create Delivery Run</h1>
<form asp-action="Create" method="post" class="card p-3">
    <div class="row g-3">
        <div class="col-sm-4">
            <label asp-for="RunDate" class="form-label">Run Date</label>
            <input asp-for="RunDate" class="form-control" type="date" />
            <span asp-validation-for="RunDate" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="DriverName" class="form-label">Driver</label>
            <select asp-for="DriverName" class="form-select" asp-items="drivers"></select>
            <span asp-validation-for="DriverName" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="Vehicle" class="form-label">Vehicle</label>
            <select asp-for="Vehicle" class="form-select" asp-items="vehicles"></select>
        </div>
    </div>

    <hr />
    <div class="mb-3">
        <label class="form-label">Select Confirmed Orders</label>
        <select name="OrderIds" multiple class="form-select" size="8">
            @foreach (var o in openOrders)
            {
                <option value="@o.Value" selected="@(o.Selected ? "selected" : null)">@o.Text</option>
            }
        </select>
        <div class="form-text">Hold Ctrl/Cmd to select multiple.</div>
        <span asp-validation-for="OrderIds" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Create Run</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "DeliveryRuns")">Cancel</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
