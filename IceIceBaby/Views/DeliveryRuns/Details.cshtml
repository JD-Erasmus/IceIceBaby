@model IceIceBaby.Models.DeliveryRun
@{
    ViewData["Title"] = "Run Details";
}

<section class="mb-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
        <div>
            <h1 class="page-title mb-1">Run #@Model.Id</h1>
            <p class="text-muted mb-0">@Model.RunDate.ToString("D") &bull; Driver: @Model.DriverName &bull; Vehicle: @Model.Vehicle &bull; Status: @Model.Status</p>
        </div>
        <form asp-action="AddOrder" method="post" class="d-flex flex-wrap gap-2 align-items-end">
            <input type="hidden" name="runId" value="@Model.Id" />
            <div class="form-floating">
                <input name="orderId" class="form-control" placeholder="Confirmed Order Id" />
                <label class="form-label">Confirmed Order Id</label>
            </div>
            <button class="btn btn-outline-primary" type="submit">Add to Run</button>
        </form>
    </div>
</section>

<section class="card border-0 shadow-soft p-4">
    <h5 class="mb-3">Stops</h5>
    <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Order</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.Stops.OrderBy(s => s.Seq))
                {
                    <tr>
                        <td>@s.Seq</td>
                        <td>@s.OrderId</td>
                        <td>@(s.DeliveredAt == null ? "Pending" : $"Delivered @ {s.DeliveredAt}")</td>
                        <td class="text-end">
                            @if (s.DeliveredAt == null)
                            {
                                <form asp-action="MarkDelivered" method="post" class="d-inline">
                                    <input type="hidden" name="runId" value="@Model.Id" />
                                    <input type="hidden" name="orderId" value="@s.OrderId" />
                                    <button class="btn btn-sm btn-success" type="submit">Mark Delivered</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <form asp-action="UploadPod" method="post" enctype="multipart/form-data" class="d-flex flex-wrap gap-3 align-items-center">
            <input type="hidden" name="orderId" value="0" />
            <div>
                <label class="form-label">Proof of Delivery (POD)</label>
                <input type="file" name="file" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Upload POD (stub)</button>
        </form>
    </div>
</section>
