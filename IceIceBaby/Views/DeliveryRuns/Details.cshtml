@model IceIceBaby.Models.DeliveryRun
@{
    ViewData["Title"] = "Run Details";
}
<h1>Run #@Model.Id (@Model.RunDate)</h1>
<div class="text-muted">Driver: @Model.DriverName | Vehicle: @Model.Vehicle | Status: @Model.Status</div>

<div class="card mt-3 p-3">
    <form asp-action="AddOrder" method="post" class="row g-2 align-items-end">
        <input type="hidden" name="runId" value="@Model.Id" />
        <div class="col-sm-6">
            <label class="form-label">Confirmed Order Id</label>
            <input name="orderId" class="form-control" placeholder="Enter Confirmed Order Id" />
        </div>
        <div class="col-sm-3">
            <button class="btn btn-outline-primary" type="submit">Add to Run</button>
        </div>
    </form>
</div>

<table class="table table-sm table-striped mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Order</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Stops.OrderBy(s => s.Seq))
        {
            <tr>
                <td>@s.Seq</td>
                <td>@s.OrderId</td>
                <td>@(s.DeliveredAt == null ? "Pending" : $"Delivered @ {s.DeliveredAt}")</td>
                <td class="text-end">
                    @if (s.DeliveredAt == null)
                    {
                        <form asp-action="MarkDelivered" method="post" class="d-inline">
                            <input type="hidden" name="runId" value="@Model.Id" />
                            <input type="hidden" name="orderId" value="@s.OrderId" />
                            <button class="btn btn-sm btn-success" type="submit">Mark Delivered</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="UploadPod" method="post" enctype="multipart/form-data" class="mt-3">
    <input type="hidden" name="orderId" value="0" />
    <input type="file" name="file" />
    <button type="submit" class="btn btn-primary">Upload POD (stub)</button>
</form>
