@{
    ViewData["Title"] = "Dashboard";
}

<section class="mb-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
        <div>
            <h1 class="page-title mb-1">Operations Dashboard</h1>
            <p class="text-muted mb-0">Monitor fulfilment, delivery, and payment health at a glance.</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-outline-primary" asp-controller="Orders" asp-action="Index">View Orders</a>
            <a class="btn btn-primary" asp-controller="DeliveryRuns" asp-action="Create">Schedule Run</a>
        </div>
    </div>
</section>

<section class="row g-4">
    <div class="col-lg-3 col-sm-6">
        <div class="card p-4 h-100">
            <span class="text-muted text-uppercase small">New Orders</span>
            <div class="display-6 fw-bold text-primary mt-2">12</div>
            <p class="small text-muted mb-0">Orders created in the last 24 hours.</p>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card p-4 h-100">
            <span class="text-muted text-uppercase small">Runs In Progress</span>
            <div class="display-6 fw-bold text-primary mt-2">4</div>
            <p class="small text-muted mb-0">Drivers currently active on delivery routes.</p>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card p-4 h-100">
            <span class="text-muted text-uppercase small">Delivered</span>
            <div class="display-6 fw-bold text-success mt-2">89%</div>
            <p class="small text-muted mb-0">Fulfilment rate for confirmed orders.</p>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card p-4 h-100">
            <span class="text-muted text-uppercase small">Payments Pending</span>
            <div class="display-6 fw-bold text-warning mt-2">6</div>
            <p class="small text-muted mb-0">Awaiting reconciliation in finance.</p>
        </div>
    </div>
</section>

<section class="row g-4 mt-1">
    <div class="col-xl-8">
        <div class="card p-4 h-100">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">Run Performance</h5>
                <span class="badge bg-primary-subtle text-primary fw-semibold">Coming soon</span>
            </div>
            <p class="text-muted mb-0">Charts and KPIs will render here once telemetry is connected.</p>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card p-4 h-100">
            <h5>Alerts</h5>
            <ul class="list-unstyled mb-0 text-muted">
                <li class="mb-2">&bull; Configure notification channels for delayed deliveries.</li>
                <li class="mb-2">&bull; Integrate finance tooling for automated payment matching.</li>
                <li>&bull; Enable driver app analytics for on-route insights.</li>
            </ul>
        </div>
    </div>
</section>
