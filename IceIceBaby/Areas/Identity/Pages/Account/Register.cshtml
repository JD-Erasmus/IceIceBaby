@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="row justify-content-center g-4">
    <div class="col-lg-5">
        <section class="card border-0 shadow-soft p-4">
            <h1 class="page-title fs-2">Create your account</h1>
            <p class="text-muted">Provision a new operator for the IceIceBaby platform.</p>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </section>
    </div>
    <div class="col-lg-5">
        <section class="card border-0 shadow-soft p-4 h-100">
            <h3 class="fs-5">Use another service to register</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p class="text-muted">No external providers are configured. Connect corporate SSO to streamline onboarding.</p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">@provider.DisplayName</button>
                        }
                    </form>
                }
            }
        </section>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
