@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<section class="card border-0 shadow-soft p-5 text-center">
    <h1 class="display-5 text-danger mb-3">@ViewData["Title"]</h1>
    <p class="text-muted mb-4">You do not have permission to access this resource.</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Return to dashboard</a>
</section>
