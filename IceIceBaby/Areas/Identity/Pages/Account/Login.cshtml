@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="row justify-content-center g-4">
    <div class="col-md-8 col-lg-5 col-xl-4">
        <section class="card border-0 shadow-soft p-4">
            <h1 class="page-title fs-2">@ViewData["Title"]</h1>
            <p class="text-muted mb-0">Sign in to manage orders, delivery runs, and daily operations.</p>
            <hr class="my-4" />
            <form id="account" method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                <div class="mt-3 text-center text-muted small">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                </div>
                <div class="mt-2 text-center small">
                    <span class="text-muted">Need an account?</span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Register here</a>
                </div>
            </form>
            <div class="mt-4 p-3 bg-light rounded-3 small text-muted">
                <strong>Security tip:</strong> Only approved team members should access this portal. Contact ops support if you notice unexpected activity.
            </div>
        </section>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
