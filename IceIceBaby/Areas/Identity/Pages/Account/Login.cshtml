@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="row justify-content-center g-4">
    <div class="col-lg-5">
        <section class="card border-0 shadow-soft p-4">
            <h1 class="page-title fs-2">@ViewData["Title"]</h1>
            <p class="text-muted">Use your IceIceBaby credentials to access the operations suite.</p>
            <form id="account" method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                <div class="mt-3 text-center text-muted small">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                </div>
            </form>
        </section>
    </div>
    <div class="col-lg-5">
        <section class="card border-0 shadow-soft p-4 h-100">
            <h3 class="fs-5">Use another service to log in</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p class="text-muted">No external authentication services are configured yet. Configure providers to enable social or corporate SSO.</p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                        }
                    </form>
                }
            }
        </section>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
